<!DOCTYPE html>
<html lang="es">

<head>
    <link rel="stylesheet" href="/css/estilos.css">
    <link rel="stylesheet" href="/css/formularios.css">
    <%- include('./partials/head')%>
</head>

<body>
    <%- include('./partials/navbar') %>

        <main>

            <h1 class="titulo2">Editar Producto</h1>

            <form action="/producto/edit/<%=producto.id%>?_method=PUT" method="post" enctype="multipart/form-data">

                <label for="nombre">Nombre</label>

                <input type="text" name="nombre" value="<%=producto.nombre%>" required>

                <label for="descripcion">Descripcion</label>

                <textarea name="descripcion" required><%=producto.descripcion%></textarea>

                <label for="categoria">Seleccionar categoria</label>

                <select name="categoria" required>

                    <% for (let i =0; i<categorias.length; i++) { %>

                        <% if (categorias[i]==producto.categoria){ %>
                            <option value="<%=categorias[i]%>" selected><%=categorias[i]%></option>
                        <% continue}%> 
                        <option value="<%=categorias[i]%>"><%=categorias[i]%></option>
                    <%}%> 

                </select>

                <label for="img">Subir Imagen</label>
                <input  type="file" name="img">

                <label for="talles">Seleccionar Talle</label>

                <div>

                    <% for (let i =0; i<talles.length; i++) { %>

                        <% if (producto.talles.includes(talles[i])){ %>

                            <label>
                                <input type="checkbox" name="talles" value="<%=talles[i]%>" checked><%=talles[i]%>
                            </label>

                        <% continue}%> 

                        <label>
                            <input type="checkbox" name="talles" value="<%=talles[i]%>"><%=talles[i]%>
                        </label>

                    <%}%> 

                </div>


                <label for="color">Seleccionar Color</label>

                <select name="color">
                    <% for (let i =0; i<colores.length; i++) { %>

                        <% if (colores[i]==producto.color){ %>
                            <option value="<%=colores[i]%>" selected><%=colores[i]%></option>
                        <% continue}%> 
                        <option value="<%=colores[i]%>"><%=colores[i]%></option> 
                    <%}%> 
                </select>

                <label for="precio">Precio</label>
                <input type="number" name="precio" value="<%=producto.precio%>"required>

                <button class="btn1" type="submit">Editar producto</button>

            </form>
        </main>


        </main>

</body>
<%- include('./partials/footer')%>

</html>