<!DOCTYPE html>
<html lang="es">

<head>
    <link rel="stylesheet" href="/css/estilos.css">
    <link rel="stylesheet" href="/css/formularios.css">
    <%- include('./partials/head')%>
</head>

<body>
    <%- include('./partials/navbar') %>

        <main>

            <h1 class="titulo2">Editar Producto</h1>

            <form action="/producto/edit/<%=producto.id%>?_method=PUT" method="post" enctype="multipart/form-data">

                <label for="nombre">Nombre</label>

                <input type="text" name="nombre" value="<%=producto.nombre%>" required>

                <label for="descripcion">Descripcion</label>

                <textarea name="descripcion" required><%=producto.descripcion%></textarea>

                <label for="categoria">Categoria</label>
                <select name="categoria">
                    <% for (let i =0; i<categorias.length; i++) { %>
                        <option value="<%=categorias[i]%>"><%=categorias[i]%></option>
                    <%}%> 
                </select>
                
                <label for="img">Imagen</label>
                <input  type="file" name="img">

                <label for="talles">Talle</label>

                <select name="talle">

                    <% for (let i =0; i<talles.length; i++) { %>

                        <% if (producto.talle == talles[i]){ %>

                            <option value="<%=talles[i]%>" selected><%=talles[i]%></option>

                        <% continue}%> 

                        
                        <% for (let i =0; i<categorias.length; i++) { %>
                            <option value="<%=talles[i]%>"><%=talles[i]%></option>
                        <%}%> 

                    <%}%> 

                </select>


                <label for="color">Color</label>
                <input class="input1" type="text" name="color" value="<%=producto.color%>"required>
                

                <label for="precio">Precio</label>
                <input type="number" name="precio" value="<%=producto.precio%>"required>

                <label for="precio">Stock</label>
                <input type="number" name="stock" value="<%=producto.stock%>"required>

                <button class="btn1" type="submit">Editar producto</button>

            </form>

            <form action="/producto/delete/<%=producto.id%>" method="post">
                <button class="btn1" type="submit">Eliminar producto</button>
            </form>
        </main>


        </main>

</body>
<%- include('./partials/footer')%>

</html>